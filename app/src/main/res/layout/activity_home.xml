<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="jp.ac.it_college.std.s14002.android.irresponsible.HomeScreen">

    <LinearLayout
        android:id="@+id/layout_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D2C35"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/button_dungeon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_customize"
            android:text="@string/dungeon_button"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button_collection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_customize"
            android:text="@string/collection_button"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_customize"
            android:text="@string/menu_button"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/level_view"
            android:textColor="#fff"
            android:textSize="22sp"
            android:gravity="bottom"
            />

        <TextView
            android:id="@+id/label_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="00"
            android:textSize="40sp"
            android:gravity="bottom"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#405968"
        android:gravity="center"
        android:text="@string/senior_button"
        android:textColor="#fff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#405968"
        android:gravity="center"
        android:text="@string/intermediate_button"
        android:textColor="#fff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#405968"
        android:gravity="center"
        android:text="@string/beginner_button"
        android:textColor="#fff"
        android:textSize="40sp" />


</LinearLayout>
